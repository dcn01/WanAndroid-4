<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	app:startDestination="@id/tabFragment">
	
	<fragment
		android:id="@+id/tabFragment"
		android:name="com.tainzhi.android.wanandroid.ui.TabFragment"
		android:label="fragment_tab"
		tools:layout="@layout/fragment_tab">
		<action
			android:id="@+id/action_tab_to_login"
			app:destination="@id/loginActivity" />
	</fragment>
	
	<activity
		android:id="@+id/loginActivity"
		android:name="com.tainzhi.android.wanandroid.ui.LoginActivity"
		android:label="activity_login"
		tools:layout="@layout/activity_login"/>
</navigation>