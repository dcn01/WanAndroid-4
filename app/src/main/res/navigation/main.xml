<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	app:startDestination="@id/tabFragment">

	<fragment
		android:id="@+id/tabFragment"
		android:name="com.tainzhi.android.wanandroid.ui.TabFragment"
		android:label="fragment_tab"
		tools:layout="@layout/fragment_tab">
		<action
			android:id="@+id/action_tab_to_login"
			app:destination="@id/loginActivity" />
		<action
			android:id="@+id/action_tabFragment_to_browserActivity"
			app:destination="@id/browserActivity" />
		<action
			android:id="@+id/action_tabFragment_to_collectFragment"
			app:destination="@id/collectFragment" />
	</fragment>

	<fragment
		android:id="@+id/collectFragment"
		android:name="com.tainzhi.android.wanandroid.ui.CollectFragment"
		android:label="fragment_collect"
		tools:layout="@layout/fragment_collect" />

	<activity
		android:id="@+id/loginActivity"
		android:name="com.tainzhi.android.wanandroid.ui.login.LoginActivity"
		android:label="activity_login"
		tools:layout="@layout/activity_login" />

	<activity
		android:id="@+id/browserActivity"
		android:name="com.tainzhi.android.wanandroid.ui.BrowserActivity"
		android:label="activity_browser"
		tools:layout="@layout/activity_browser">

		<argument
			android:name="url"
			android:defaultValue="www.wanandroid.com"
			app:argType="string" />

	</activity>
</navigation>