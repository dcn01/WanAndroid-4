<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:src="@drawable/side_nav_bar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="登录/注册"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/user_icon"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/user_icon"
        app:layout_constraintTop_toBottomOf="@+id/user_icon" />

    <TextView
        android:id="@+id/collections"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="212dp"
        android:drawableStart="@drawable/ic_baseline_collections_24"
        android:gravity="center"
        android:text="我的收藏"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/browseHistory"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/ic_baseline_history_24"
        android:gravity="center"
        android:text="浏览历史"
        app:layout_constraintEnd_toEndOf="@+id/collections"
        app:layout_constraintStart_toStartOf="@+id/collections"
        app:layout_constraintTop_toBottomOf="@id/collections" />

    <TextView
        android:id="@+id/otherInfo"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/ic_baseline_info_24"
        android:gravity="center"
        android:text="其他信息"
        app:layout_constraintEnd_toEndOf="@+id/collections"
        app:layout_constraintStart_toStartOf="@+id/collections"
        app:layout_constraintTop_toBottomOf="@id/browseHistory" />

    <Button
        android:id="@+id/log_out_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/side_nav_bar"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
