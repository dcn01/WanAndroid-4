<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="article"
            type="com.tainzhi.android.wanandroid.bean.Article" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/item_padding_left_right"
        android:paddingRight="@dimen/item_padding_left_right"
        android:paddingTop="10dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/home_hot" />

                <TextView
                    android:id="@+id/articleAuthor"
                    style="@style/Article_text"
                    tools:text="tainzhi"
                    android:text="@{article.author}"/>


                <!--<ImageView-->
                <!--android:layout_width="14dp"-->
                <!--android:layout_height="14dp"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:src="@drawable/home_hot" />-->

                <TextView
                    android:id="@+id/articleTag"
                    android:layout_marginStart="15dp"
                    style="@style/Article_text"
                    tools:text="Android"
                    android:text="@{article.superChapterName+`/`+article.chapterName}"/>

            </LinearLayout>

            <TextView
                android:id="@+id/articleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1c1c1e"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                app:htmlText="@{article.title}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/articleTime"
                    style="@style/Article_text"
                    tools:text="1小时前"
                    android:text="@{article.niceDate}"/>

                <ImageView
                    android:id="@+id/articleStar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:clickable="true"
                    android:src="@drawable/timeline_like_normal"
                    android:layout_marginStart="20dp"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>